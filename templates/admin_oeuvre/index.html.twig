{% extends 'base.html.twig' %}

{% block title %}gestion{% endblock %}

{% block body %}

    <div class="index_container">
    <div class="tableIndex">
    <h1>gestion</h1>
<a href="{{ path('app_admin_oeuvre_new') }}">ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Image</th>
                <th>categorie</th>
                 <th>Mati√®re(s)</th>
                 <th>dimention</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.id }}</td>
                <td>{{ oeuvre.titre }}</td>
                <td>{{ oeuvre.prix }}</td>
                <td>
                {% if oeuvre.image %}
                {# {{ oeuvre.image }} #}
                  <img src="{{ asset('images/oeuvre/' ~ oeuvre.image ) }}" alt="" class="img80">
                  {% endif %}
                </td>
                   <td>{{ oeuvre.categorie.nom }}</td>
                   
                        <td>
                        
                            {% if oeuvre.matieres|length > 0 %}
                                {% for matiere in oeuvre.matieres %}
                                    {{ matiere.nom|capitalize }}{% if not loop.last %},{% endif %}
                                {% endfor %}
                            {% else %}
                                <span class="text-danger fst-italic">N.R</span>
                            {% endif %}
                        
                        </td>
                        <td>
                           {{oeuvre.dimention}}
                        </td>
                <td>
                


                    <a href="{{ path('app_admin_oeuvre_show', {'id': oeuvre.id}) }}">voir</a>
                    <a href="{{ path('app_admin_oeuvre_edit', {'id': oeuvre.id}) }}">modif</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
